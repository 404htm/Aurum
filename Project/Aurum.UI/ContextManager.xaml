<UserControl x:Class="Aurum.UI.ContextManager"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Aurum.UI"
	mc:Ignorable="d" 
	d:DesignHeight="387.126" d:DesignWidth="449.102"
	DataContext="Aurum.Core.Context"
	>
	<Grid>
		<GroupBox Header="Context Information" >
			<TabControl x:Name="tabControl" Margin="0,36,-2,-2">
				<TabItem Header="Summary">
				</TabItem>
				<TabItem Header="Data Sources">
					<local:DataSources></local:DataSources>
				</TabItem>
				<TabItem Header="Templates">
				</TabItem>
				<TabItem Header="Queries">
				</TabItem>
				<TabItem Header="Targets">
				</TabItem>
				<TabItem Header="Tools">
				</TabItem>
			</TabControl>
		</GroupBox>
		<TextBox Margin="10,22,10,0" VerticalAlignment="Top" ToolTip="Context Name" />

	</Grid>
</UserControl>
